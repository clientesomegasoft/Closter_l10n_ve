<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!-- res.config.settings form view -->
    <record
        id="l10n_ve_omegasoft_res_config_settings_view_form_inherit"
        model="ir.ui.view"
    >
        <field
            name="name"
        >l10n.ve.omegasoft.res.config.settings.view.form.inherit</field>
        <field name="model">res.config.settings</field>
        <field
            name="inherit_id"
            ref="omegasoft_payroll_res_config_settings.l10n_ve_omegasoft_res_config_settings_view_form"
        />
        <field name="arch" type="xml">

            <xpath
                expr="//div[field/@name='salary_rules_categories_deductions']"
                position="after"
            >
                <span
                    class="o_form_label"
                >Additional Categories for Payslip Report</span>
                <div class="mt8" id="categories_extras">
                    <field
                        name="salary_rules_categories_extras"
                        widget="many2many_tags"
                        options="{'no_create': True}"
                    />
                </div>


                <span class="o_form_label">Additional Rules for Payslip Report</span>
                <div class="mt8" id="rules_extras">
                    <field
                        name="salary_rules_extras"
                        widget="many2many_tags"
                        options="{'no_create': True}"
                        context="{'show_code_for_salary_rule': True}"
                    />
                </div>

            </xpath>

        </field>
    </record>
</odoo>
