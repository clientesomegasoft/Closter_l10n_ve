<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!-- res.partner form view -->
    <record id="view_partner_form" model="ir.ui.view">
        <field name="name">view.partner.form</field>
        <field name="model">res.partner</field>
        <field
            name="inherit_id"
            ref="l10n_ve_fiscal_identification.view_partner_form"
        />
        <field name="arch" type="xml">
            <notebook position="inside">
                <page
                    string="Withholdings"
                    attrs="{'invisible': ['|', '|', ('is_company_partner', '=', True), ('person_type_code', 'not in', ('PNRE', 'PJDO')), ('partner_type', '=', False)]}"
                >
                    <field name="is_company_partner" invisible="1" />
                    <group name="withholding" />
                </page>
            </notebook>
        </field>
    </record>
</odoo>
