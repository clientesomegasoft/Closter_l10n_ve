<odoo>
  <data>
    <template id="hr_employee_badge" inherit_id="hr.print_employee_badge" active="True">
      <xpath expr="//div[hasclass('page')]" position="replace">
        <div class="page">
          <t t-foreach="docs" t-as="employee">
              <div class="col-md-6">
                  <table
                                style="width:153pt; height:243pt; border: 1pt solid black; border-collapse:separate; border-radius:8pt; margin:5pt"
                            >
                      <td valign="center">
                          <table class="table-borderless">
                              <tr>
                                <img
                                                t-if="employee.company_id.logo"
                                                t-att-src="image_data_uri(employee.company_id.logo)"
                                                align="left"
                                                style="max-height:30pt;max-width:75%;margin:3pt"
                                                alt="Company Logo"
                                            />
                                <div
                                                style="font-size:13pt; margin-bottom:0pt; margin-top:3pt; font-weight:bold;"
                                                align="center"
                                            ><t
                                                    t-esc="employee.company_id.name"
                                                /></div>
                                <div
                                                style="font-size:8pt; margin-bottom:0pt; margin-top:0pt; font-weight:bold;"
                                                align="center"
                                            ><t t-esc="employee.company_id.vat" /></div>
                              </tr>
                          </table>

                          <table style="width:155pt" class="table-borderless">
                            <tr>
                                <td align="center">
                                    <img
                                                    t-att-src="image_data_uri(employee.avatar_1920)"
                                                    style="max-height:85pt;max-width:90%"
                                                    alt="Employee Image"
                                                />
                                </td>
                            </tr>
                            <tr><td><div
                                                    align="center"
                                                    style="font-size:10pt;margin-bottom:5pt;"
                                                ><t
                                                        t-esc="employee.job_id.name"
                                                    /></div></td></tr>
                            <tr><td><div
                                                    align="center"
                                                    t-if="employee.barcode"
                                                    t-field="employee.barcode"
                                                    t-options="{'widget': 'barcode', 'width': 600, 'height': 120, 'img_style': 'max-height:50pt;max-width:98%;', 'img_align': 'center'}"
                                                /></td></tr>
                            <tr><th><div
                                                    style="font-size:15pt; margin-bottom:0pt;margin-top:0pt;"
                                                    align="center"
                                                ><t
                                                        t-esc="employee.name"
                                                    /></div></th></tr>
                            <tr><th><div
                                                    style="font-size:10pt; margin-bottom:0pt;margin-top:0pt;"
                                                    align="center"
                                                > <span>Identificacion:</span> <t
                                                        t-esc="employee.identification_id"
                                                    /></div></th></tr>
                            <tr><th><div
                                                    style="font-size:10pt; margin-bottom:0pt;margin-top:0pt;"
                                                    align="center"
                                                > <span>Fecha de ingreso:</span> <t
                                                        t-esc="employee.first_contract_date"
                                                    /></div></th></tr>
                            <tr><th><div
                                                    style="font-size:10pt; margin-bottom:0pt;margin-top:0pt;"
                                                    align="center"
                                                > <span>Departamento:</span> <t
                                                        t-esc="employee.department_id.name"
                                                    /></div></th></tr>
                            <tr><th><div
                                                    style="font-size:10pt; margin-bottom:0pt;margin-top:0pt;"
                                                    align="center"
                                                > <span>Puesto de trabajo:</span> <t
                                                        t-esc="employee.job_title"
                                                    /></div></th></tr>
                          </table>
                      </td>
                  </table>
              </div>
            </t>
        </div>
      </xpath>
    </template>
  </data>
</odoo>
