<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!-- hr.employee form view -->
    <record id="view_employee_form_inherit_hr" model="ir.ui.view">
        <field name="name">hr.employee.view.form.inherit</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr_payroll.payroll_hr_employee_view_form" />
        <field name="arch" type="xml">
            <xpath expr="." position="inside">
                <field name="employee_file" invisible="True" />
            </xpath>
            <xpath expr="//field[@name='name']" position="before">
                <field
                    name="employee_file_code_id"
                    readonly="True"
                    options="{'no_open': 1}"
                    attrs="{'invisible': [('employee_file', '=', False)]}"
                /><span
                    attrs="{'invisible': [('employee_file_code_id', '=', False)]}"
                >-</span>
            </xpath>
            <xpath expr="//field[@name='registration_number']" position="attributes">
                <attribute
                    name="attrs"
                >{'invisible': [('employee_file', '=', False)]}</attribute>            </xpath>
        </field>
    </record>
</odoo>
