<?xml version='1.0' encoding='UTF-8' ?>
<odoo>
    <record id="view_move_form" model="ir.ui.view">
        <field name="name">account.move.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">
            <div name="button_box" position="inside">
                <field name="withholding_municipal_ids" invisible="1" />
                <button
                    name="button_open_withholding_municipal"
                    string="RET. Municipal"
                    class="oe_stat_button"
                    icon="fa-bars"
                    type="object"
                    attrs="{'invisible': ['|', ('state', '!=', 'posted'), ('withholding_municipal_ids', '=', [])]}"
                />
            </div>
            <xpath expr="//group[@id='header_right_group']" position="inside">
                <field name="apply_withholding_municipal" invisible="1" />
                <field
                    name="municipal_concept_ids"
                    widget="many2many_tags"
                    attrs="{'invisible': [('apply_withholding_municipal', '=', False)]}"
                    options="{'no_create': 1}"
                />
            </xpath>
        </field>
    </record>
</odoo>
