<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="omegasoft_accumulated_hr_leave_type_view_form" model="ir.ui.view">
        <field name="name">omegasoft.accumulated.hr.leave.type.view.form.inherit</field>
        <field name="model">hr.leave.type</field>
        <field name="inherit_id" ref="hr_holidays.edit_holiday_status_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='time_type']" position="after">
                <field name="is_plan_vacation" />
                <field name="is_plan_enjoy" />
            </xpath>
        </field>
    </record>
</odoo>
