<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="employee_arc_report_wizard_form" model="ir.ui.view">
        <field name="name">employee.arc.report.wizard.form</field>
        <field name="model">employee.arc.report.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="type" />
                        <field
                            name="department_id"
                            attrs="{'invisible': [('type', '!=', 'deparment')], 'required': [('type', '=', 'deparment')]}"
                            options="{'no_create': 1, 'no_open': 1}"
                        />
                    </group>
                    <group>
                        <field name="year" widget="fieldyear_int" />
                        <field name="company_id" />
                    </group>
                </group>
                <group>
                    <field
                        name="employee_ids"
                        widget="many2many_tags"
                        force_save="1"
                        attrs="{'readonly': [('type', '!=', 'employee')]}"
                        options="{'no_create': 1}"
                    />
                    <field name="employee_file" invisible="True" />
                    <field
                        name="employee_file_code_ids"
                        required="1"
                        widget="many2many_tags"
                        options="{'no_create': 1}"
                        attrs="{'invisible': [('employee_file', '=', False)]}"
                    />
                </group>
                <footer>
                    <button
                        name="get_pdf"
                        string="IMPRIMIR"
                        type="object"
                        class="btn-primary"
                    />
                    <button
                        name="get_pdf_and_send"
                        string="ENVIAR E IMPRIMIR"
                        type="object"
                        class="btn-primary"
                    />
                    <button string="CANCEL" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
    <record id="employee_arc_report_wizard_action" model="ir.actions.act_window">
        <field name="name">ARC Empleados</field>
        <field name="res_model">employee.arc.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="employee_arc_report_wizard_form" />
        <field name="target">new</field>
    </record>
    <menuitem
        id="employee_arc_report_wizard_menu"
        name="ARC Empleados"
        action="employee_arc_report_wizard_action"
        parent="hr.hr_menu_hr_reports"
        sequence="100"
    />
</odoo>
