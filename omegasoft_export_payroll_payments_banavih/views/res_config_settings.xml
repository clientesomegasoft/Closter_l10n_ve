<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<record id="l10n_ve_omegasoft_res_config_settings_view_form_custom" model="ir.ui.view">
		<field name="name">l10n.ve.omegasoft.res.config.settings.view.form.custom</field>
		<field name="model">res.config.settings</field>
		<field name="inherit_id" ref="omegasoft_payroll_res_config_settings.l10n_ve_omegasoft_res_config_settings_view_form"/>
		<field name="arch" type="xml">
			<xpath expr="//div[@id='custom_inherit_hr_payroll']" position="after">
				<h2>Codigo de Identificación Banavih</h2>
				<div class="row mt16 o_settings_container" id="l10n_ve_islr_settings">
					<div class="col-lg-6 col-12 o_setting_box">
						<div class="o_setting_right_pane">
							<div class="text-muted">
								Código utilizado para generación de archivos txt de nómina Banavih.
							</div>
							<span class="o_form_label">Codigo de Identificación Banavih</span>
							<div class="mt8" id="categories_wage_rules">
								<field name="banavih_code"/>
							</div>
						</div>
					</div>
				</div>
			</xpath>
		</field>
	</record>
</odoo>