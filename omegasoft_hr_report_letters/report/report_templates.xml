<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <template
        id="external_layout_bold_custom"
        inherit_id="web.external_layout_bold"
        primary="True"
    >
        <xpath
            expr="//div[contains(@class, 'o_clean_header')]/div[1]"
            position="replace"
        >
            <div class="row">
                <div class="col">
                    <div style="float:left;">
                        <img
                            t-if="company.logo"
                            t-att-src="image_data_uri(company.logo)"
                            alt="Logo"
                            style="display:block; max-width:80%;"
                        />
                        <br />
                        <t t-if="report_letter">
                            <div
                                t-esc="company.vat"
                                style="font-weight: bold; font-size: 15px; text-align: center;"
                            />
                        </t>
                        <t t-if="report_txt">
                            <div
                                t-esc="company.partner_id.get_full_address_header()"
                                style="font-size: 15px; text-align: center;"
                            />
                        </t>
                        <div style="clear:both;" />
                    </div>
                </div>
            </div>
        </xpath>
        <xpath expr="//div[3]" position="replace">
            <div t-attf-class="footer o_clean_footer o_company_#{company.id}_layout">
            <div class="row">
                <div class="col" style="text-align:center;">
                    <span
                            style="font-weight: bold;"
                            t-esc="company.partner_id.get_full_address()"
                        />
                    <span style="font-weight: bold;" t-esc="company.vat" />
                    <ul
                            t-if="report_type == 'pdf'"
                            class="list-inline pagenumber float-end text-center"
                        >
                        <li class="list-inline-item"><strong><span
                                        class="page"
                                    /></strong></li>
                    </ul>
                </div>
            </div>
        </div>
        </xpath>
    </template>

    <template id="report_hr_work_letter">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-set="company" t-value="o.company_id" />
                <t t-set="report_letter" t-value="True" />
                <t t-call="omegasoft_hr_report_letters.external_layout_bold_custom">
                    <div class="page">
                        <p
                            class="text-center"
                            style="font-weight: bold; text-decoration: underline;"
                        >CONSTANCIA DE TRABAJO</p>
                        <br />
                        <br />
                        <p>
                            Quien suscribe, <span
                                t-field="o.company_id.name"
                            />, hace constar que los datos aqui
                            suministrados pertenecen al trabajador activo:
                        </p>

                        <br />
                        <br />
                        <br />
                        <table
                            style="border: 0px solid white; border-spacing:0; border-collapse:collapse; display: inline-block;"
                        >
                            <tr
                                style="padding-top:0px; padding-bottom:0px; border-width:0px; margin:0px;"
                            >
                                <td
                                    style="padding-top:0px; padding-bottom:0px; border-width:0px; margin:0px;"
                                >
                                    <span>Nombres y apellidos:</span>
                                </td>
                                <td
                                    style="padding-top:0px; padding-bottom:0px; border-width:0px; margin:0px;"
                                >
                                    <span
                                        style="font-weight: bold; text-transform:uppercase;"
                                        t-field="o.employee_id.name"
                                    />
                                </td>
                            </tr>
                            <tr
                                style="padding-top:0px; padding-bottom:0px; border-width:0px; margin:0px;"
                            >
                                <td
                                    style="padding-top:0px; padding-bottom:0px; border-width:0px; margin:0px;"
                                >
                                    <span>Cédula de identidad:</span>
                                </td>
                                <td
                                    style="padding-top:0px; padding-bottom:0px; border-width:0px; margin:0px;"
                                >
                                    <span
                                        style="font-weight: bold;"
                                        t-field="o.employee_id.identification_id"
                                    />
                                </td>
                            </tr>
                            <tr
                                style="padding-top:0px; padding-bottom:0px; border-width:0px; margin:0px;"
                            >
                                <t
                                    t-if="o.employee_id.contract_id.wage_type == 'monthly'"
                                >
                                    <td
                                        style="padding-top:0px; padding-bottom:0px; border-width:0px; margin:0px;"
                                    > <span>Salario Mensual: </span> </td>
                                    <td
                                        style="font-weight: bold; padding-top:0px; padding-bottom:0px; border-width:0px; margin:0px;"
                                    > <span
                                            t-field="o.employee_id.contract_id.wage"
                                        /></td>
                                </t>
                                <t
                                    t-if="o.employee_id.contract_id.wage_type == 'hourly'"
                                >
                                    <td
                                        style="padding-top:0px; padding-bottom:0px; border-width:0px; margin:0px;"
                                    > <span>Salario Por Hora: </span> </td>
                                    <td
                                        style="font-weight: bold; padding-top:0px; padding-bottom:0px; border-width:0px; margin:0px;"
                                    > <span
                                            t-field="o.employee_id.contract_id.hourly_wage"
                                        /> </td>
                                </t>
                            </tr>
                            <tr
                                style="padding-top:0px; padding-bottom:0px; border-width:0px; margin:0px;"
                            >
                                <td
                                    style="padding-top:0px; padding-bottom:0px; border-width:0px; margin:0px;"
                                >
                                    <span>Cargo Desempeñado:</span>
                                </td>
                                <td
                                    style="padding-top:0px; padding-bottom:0px; border-width:0px; margin:0px;"
                                >
                                    <span
                                        style="font-weight: bold; text-transform:uppercase;"
                                        t-field="o.employee_id.job_title"
                                    />
                                </td>
                            </tr>
                            <tr
                                style="padding-top:0px; padding-bottom:0px; border-width:0px; margin:0px;"
                            >
                                <td
                                    style="padding-top:0px; padding-bottom:0px; border-width:0px; margin:0px;"
                                >
                                    <span>Departamento:</span>
                                </td>
                                <td
                                    style="padding-top:0px; padding-bottom:0px; border-width:0px; margin:0px;"
                                >
                                    <span
                                        style="font-weight: bold; text-transform:uppercase;"
                                        t-field="o.employee_id.department_id.name"
                                    />
                                </td>
                            </tr>
                            <tr
                                style="border: 0px solid white; padding-top:0px; padding-bottom:0px; border-width:0px; margin:0px;"
                            >
                                <td
                                    style="border: 0px solid white; padding-top:0px; padding-bottom:0px; border-width:0px; margin:0px;"
                                >
                                    <span>Fecha de Ingreso:</span>
                                </td>
                                <td
                                    style="border: 0px solid white; padding-top:0px; padding-bottom:0px; border-width:0px; margin:0px;"
                                >
                                    <span
                                        style="font-weight: bold;"
                                        t-field="o.employee_id.contract_id.date_start"
                                    />
                                </td>
                            </tr>
                        </table>

                        <br />
                        <br />

                        <p>
                            Constancia que se expide a petición de la parte interesada, en <span
                                t-field="o.company_id.partner_id.city"
                            /> a los <span
                                style="font-weight: bold;"
                                t-field="o.date"
                            />
                        </p>

                        <br />
                        <br />

                        <p>
                            Por <span
                                style="font-weight: bold; text-transform:uppercase;"
                                t-field="o.company_id.name"
                            />
                        </p>

                        <br />
                        <br />
                        <br />

                        <p>
                            RESPONSABLE DEL DEPARTAMENTO DE NÓMINA
                        </p>

                        <br />

                        <p>
                            NOTA: Va sin enmienda. Cualquier corrección implica su nulidad
                        </p>
                    </div>
                </t>
            </t>
        </t>
    </template>

    <template id="report_hr_txt_letter">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-set="company" t-value="o.company_id" />
                <t t-set="report_txt" t-value="True" />
                <t t-call="omegasoft_hr_report_letters.external_layout_bold_custom">
                    <div class="page">
                        <span style="text-align:right"><p
                                style="font-weight: bold;"
                            >Fecha: <span t-field="o.date" /></p></span>
                        <span style="text-align:right"><p
                                style="font-weight: bold;"
                            >Asunto: <span
                                    t-field="o.export_bank_payment_id.structure_id"
                                /> <span
                                    t-field="o.export_bank_payment_id.description"
                                /> </p></span>

                        <br />
                        <br />

                        <p>Señores:</p>
                        <p><span t-field="o.export_bank_payment_id.bank_id" /></p>
                        <p>
                            Por medio de la presente les solicitamos la ejecución de los abonos
                            especificados en el listado anexo, correspondiente a nuestro personal.
                        </p>

                        <br />

                        <p>
                            Asimismo, autorizamos a debitar el monto de la misma, de nuestra cuenta
                            matriz, según se instruye a continuación:
                        </p>

                        <br />

                        <table
                            style="border: 0px solid white; border-spacing:0; border-collapse:collapse; display: inline-block;"
                        >
                            <tr
                                style="padding-top:0px; padding-bottom:0px; border-width:0px; margin:0px;"
                            >
                                <td
                                    style="padding-top:0px; padding-bottom:0px; border-width:0px; margin:0px;"
                                ><span>Debitar a la Cta:</span></td>
                                <td
                                    style="padding-top:0px; padding-bottom:0px; border-width:0px; margin:0px;"
                                ><span
                                        t-field="o.export_bank_payment_id.bank_account_id.sanitized_acc_number"
                                    /></td>
                            </tr>
                            <tr
                                style="padding-top:0px; padding-bottom:0px; border-width:0px; margin:0px;"
                            >
                                <td
                                    style="padding-top:0px; padding-bottom:0px; border-width:0px; margin:0px;"
                                ><span>Monto en Bs:</span></td>
                                <td
                                    style="padding-top:0px; padding-bottom:0px; border-width:0px; margin:0px;"
                                ><span
                                        style="font-weight: bold;"
                                        t-esc="o.get_payslip_amount()"
                                    /></td>
                            </tr>
                            <tr
                                style="padding-top:0px; padding-bottom:0px; border-width:0px; margin:0px;"
                            >
                                <td
                                    style="padding-top:0px; padding-bottom:0px; border-width:0px; margin:0px;"
                                ><span>Nro de Registro:</span></td>
                                <td
                                    style="padding-top:0px; padding-bottom:0px; border-width:0px; margin:0px;"
                                ><span
                                        style="font-weight: bold;"
                                        t-field="o.export_bank_payment_id.name"
                                    /></td>
                            </tr>
                            <tr
                                style="padding-top:0px; padding-bottom:0px; border-width:0px; margin:0px;"
                            >
                                <td
                                    style="padding-top:0px; padding-bottom:0px; border-width:0px; margin:0px;"
                                ><span>Fecha de Abono:</span></td>
                                <td
                                    style="padding-top:0px; padding-bottom:0px; border-width:0px; margin:0px;"
                                ><span
                                        style="font-weight: bold;"
                                        t-field="o.export_bank_payment_id.valid_date"
                                    /></td>
                            </tr>
                            <tr
                                style="border: 0px solid white; padding-top:0px; padding-bottom:0px; border-width:0px; margin:0px;"
                            >
                                <td
                                    style="border: 0px solid white; padding-top:0px; padding-bottom:0px; border-width:0px; margin:0px;"
                                ><span>N° de documento contable:</span></td>
                                <td
                                    style="border: 0px solid white; padding-top:0px; padding-bottom:0px; border-width:0px; margin:0px;"
                                ><span
                                        style="font-weight: bold;"
                                        t-esc="o.get_account_move()"
                                    /></td>
                            </tr>
                        </table>

                        <br />
                        <br />
                        <br />
                        <br />
                        <br />
                        <br />
                        <br />
                        <br />
                        <br />
                        <br />

                        <div class="row">
                            <div class="col-6" style="text-align:center;">
                                <p>FIRMA AUTORIZADA</p>
                            </div>

                            <div class="col-6" style="text-align:center;">
                                <p>FIRMA AUTORIZADA</p>
                            </div>
                        </div>

                        <br />
                        <br />
                        <br />
                        <br />
                        <br />
                        <br />
                        <br />
                        <br />
                        <br />
                        <br />

                        <div class="row">
                            <div class="col-6" style="text-align:center;">
                                <p>ELABORADO RRHH</p>
                            </div>

                            <div class="col-6" style="text-align:center;">
                                <p>FIRMA AUTORIZADA</p>
                            </div>
                        </div>

                    </div>
                </t>
            </t>
        </t>
    </template>

    <record id="report_hr_work_letter_action" model="ir.actions.report">
        <field name="name">Work Letter</field>
        <field name="model">hr.report.letters</field>
        <field name="report_type">qweb-pdf</field>
        <field
            name="report_name"
        >omegasoft_hr_report_letters.report_hr_work_letter</field>
        <field
            name="report_file"
        >omegasoft_hr_report_letters.report_hr_work_letter</field>
        <field
            name="print_report_name"
        >'Carta de Trabajo - %s' % (object.employee_id.name)</field>
        <!-- <field name="paperformat_id" ref="paperformat_report_letters_custom" /> -->
        <field name="binding_model_id" ref="model_hr_report_letters" />
    </record>

    <record id="report_hr_txt_letter_action" model="ir.actions.report">
        <field name="name">TXT Letter</field>
        <field name="model">hr.report.letters</field>
        <field name="report_type">qweb-pdf</field>
        <field
            name="report_name"
        >omegasoft_hr_report_letters.report_hr_txt_letter</field>
        <field
            name="report_file"
        >omegasoft_hr_report_letters.report_hr_txt_letter</field>
        <field
            name="print_report_name"
        >'Carta TXT - %s' % (object.export_bank_payment_id.name)</field>
        <!-- <field name="paperformat_id" ref="paperformat_report_letters_custom" /> -->
        <field name="binding_model_id" ref="model_hr_report_letters" />
    </record>

</odoo>
