<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template id="account_withholding_iva">
        <t t-foreach="docs" t-as="doc">
            <t t-call="web.html_container">
                <t t-call="web.basic_layout">
                    <div class="page">
                        <div class="container row m-0 p-0">
                            <div class="col-3 pl-0">
                                <img
                                    t-if="doc.company_id.logo"
                                    t-att-src="image_data_uri(doc.company_id.logo)"
                                    style="max-height: 85pt;"
                                    alt="Company Logo"
                                />
                                <div
                                    class="mt-2"
                                    style="font-size: 11px;"
                                >Providencia Administrativa N° SNAT/2015/0049 del 10/08/2015</div>
                            </div>
                            <div class="col-9">
                                <div class="row py-4">
                                    <div class="col-6 text-center"><h4
                                        >Comprobante de Retención de IVA</h4></div>
                                    <div class="col-6 text-end pr-0"><p
                                            style="font-size: 9px;"
                                        >
                                        LEY IVA - ART. 11: "SERÁN RESPONSABLES DEL PAGO DE IMPUESTO EN CALIDAD DE AGENTES DE RETENCIÓN, LOS COMPRADORES O ADQUIRIENTES
                                        DE DETERMINADOS BIENES MUEBLES Y LOS RECEPTORES DE CIERTOS SERVICIOS A QUIENES LA ADMINISTRACIÓN TRIBUTARIA DESIGNE COMO TAL"
                                    </p></div>
                                </div>
                                <div class="row text-end mt-4">
                                    <div class="col-6 pe-1 border"><b
                                        >Nro. Comprobante:</b> <span
                                            t-field="doc.name"
                                        /></div>
                                    <div class="col-6 pe-1 border"><b
                                        >Fecha de emisión:</b> <span
                                            t-field="doc.date"
                                        /></div>
                                </div>
                            </div>
                        </div>
                        <table
                            class="table table-bordered mt-3 p-0"
                            style="font-size: 13px;"
                        >
                            <tr>
                                <td
                                >Nombre y Apellido o Razón Social del Agente de Retención:<br
                                    /><span t-field="doc.agent_id" /></td>
                                <td
                                >Registro de Identificación Fiscal del Agente de Retención<br
                                    /><span t-field="doc.agent_id.vat" /></td>
                                <td style="width:20%;">Período Fiscal<br /><span
                                        t-esc="doc.date.strftime('%m/%Y')"
                                    /></td>
                            </tr>
                            <tr>
                                <td
                                    colspan="3"
                                >Dirección Fiscal del Agente de Retención:<br /><span
                                        t-esc="doc.agent_id._display_address(without_company=True)"
                                    /></td>
                            </tr>
                            <tr>
                                <td
                                >Nombre y Apellido o Razón Social del Agente Retenido:<br
                                    /><span t-field="doc.subject_id" /></td>
                                <td
                                    colspan="2"
                                >Registro de Identificación Fiscal del Agente Retenido<br
                                    /><span t-field="doc.subject_id.vat" /></td>
                            </tr>
                            <tr>
                                <td colspan="3">Dirección Fiscal del Agente Retenido:<br
                                    /><span
                                        t-esc="doc.subject_id._display_address(without_company=True)"
                                    /></td>
                            </tr>
                        </table>
                        <table
                            class="table table-bordered mt-3 p-0 text-center"
                            style="font-size: 13px;"
                        >
                            <tr style="background-color:#A9F5F2;">
                                <th>Fecha de documento</th>
                                <th>Nro. Factura</th>
                                <th>Nro. Control</th>
                                <th>Nro. Nota de débito</th>
                                <th>Nro. Nota de crédito</th>
                                <th>Tipo Trans.</th>
                                <th>Nro. Factura afectada</th>
                                <th>Monto total del documento</th>
                                <th>Compras sin derecho a crédito fiscal</th>
                                <th>Base imponible</th>
                                <th>% Alicuota</th>
                                <th>Impuesto causado</th>
                                <th>% de retención</th>
                                <th>Impuesto retenido</th>
                            </tr>
                            <tr t-foreach="doc.line_ids" t-as="line">
                                <td><span t-field="doc.invoice_date" /></td>
                                <td><span
                                        t-esc="doc.invoice_id.supplier_invoice_number or doc.invoice_id.name"
                                        t-if="doc.invoice_id.fiscal_transaction_type == 'REG-01'"
                                    /></td>
                                <td><span t-field="doc.invoice_id.nro_ctrl" /></td>
                                <td><span
                                        t-esc="doc.invoice_id.supplier_invoice_number or doc.invoice_id.name"
                                        t-if="doc.invoice_id.fiscal_transaction_type == 'COM-02'"
                                    /></td>
                                <td><span
                                        t-esc="doc.invoice_id.supplier_invoice_number or doc.invoice_id.name"
                                        t-if="doc.invoice_id.fiscal_transaction_type == 'ANU-03'"
                                    /></td>
                                <td><span
                                        t-field="doc.invoice_id.fiscal_transaction_type"
                                    /></td>
                                <td>
                                    <span
                                        t-esc="doc.invoice_id.debit_origin_id.supplier_invoice_number or doc.invoice_id.debit_origin_id.name"
                                        t-if="doc.invoice_id.fiscal_transaction_type == 'COM-02'"
                                    />
                                    <span
                                        t-esc="doc.invoice_id.reversed_entry_id.supplier_invoice_number or doc.invoice_id.reversed_entry_id.name"
                                        t-if="doc.invoice_id.fiscal_transaction_type == 'ANU-03'"
                                    />
                                </td>
                                <td />
                                <td />
                                <td class="text-end"><span
                                        t-field="line.tax_base_amount"
                                    /></td>
                                <td><span
                                        t-esc="line.tax_line_id.amount"
                                        t-options='{"widget": "float", "precision": 2}'
                                    />%</td>
                                <td class="text-end"><span
                                        t-field="line.tax_amount"
                                    /></td>
                                <td />
                                <td class="text-end"><span t-field="line.amount" /></td>
                            </tr>
                            <tr>
                                <td colspan="7" />
                                <td class="text-end"><span
                                        t-esc="abs(doc.invoice_id.amount_total_signed if doc.currency_id.id == doc.company_id.currency_id.id else doc.invoice_id.amount_total_ref)"
                                        t-options="{'widget': 'monetary', 'display_currency': doc.currency_id}"
                                    /></td>
                                <td class="text-end"><span
                                        t-field="doc.exempt_amount"
                                    /></td>
                                <td class="text-end"><span
                                        t-field="doc.tax_base_amount"
                                    /></td>
                                <td />
                                <td class="text-end"><span
                                        t-field="doc.tax_amount"
                                    /></td>
                                <td><span
                                        t-esc="doc.iva_rate_id.name"
                                        t-options='{"widget": "float", "precision": 2}'
                                    />%</td>
                                <td class="text-end"><span t-field="doc.amount" /></td>
                            </tr>
                        </table>
                        <div
                            class="row mt32 mb32 text-center"
                            style="page-break-inside: avoid;"
                        >
                            <div class="col-6">
                                <div style="height: 100px;">
                                    <img
                                        t-if="doc.company_id.sign_512 and doc.company_id.partner_id == doc.agent_id"
                                        t-att-src="image_data_uri(doc.company_id.sign_512)"
                                        style="max-height: 100px;"
                                    />
                                </div>
                                <div
                                    class="mx-auto mb-2 border-top border-dark"
                                    style="width: 50%;"
                                />
                                <span t-field="doc.agent_id" /><br />
                                Agente de Retención (Sello y Firma)
                            </div>
                            <div class="col-6">
                                <div style="height: 100px;">
                                    <img
                                        t-if="doc.company_id.sign_512 and doc.company_id.partner_id == doc.subject_id"
                                        t-att-src="image_data_uri(doc.company_id.sign_512)"
                                        style="max-height: 100px;"
                                    />
                                </div>
                                <div
                                    class="mx-auto mb-2 border-top border-dark"
                                    style="width: 50%;"
                                />
                                <span t-field="doc.subject_id" /><br />
                                Firma del Beneficiario
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
    <record id="account_withholding_iva_report" model="ir.actions.report">
        <field name="name">Comprobante de IVA</field>
        <field name="model">account.withholding.iva</field>
        <field name="report_type">qweb-pdf</field>
        <field
            name="report_name"
        >l10n_ve_withholding_iva.account_withholding_iva</field>
        <field
            name="report_file"
        >l10n_ve_withholding_iva.account_withholding_iva</field>
        <field name="print_report_name">'COMP IVA - %s' % (object.name)</field>
        <field name="binding_model_id" ref="model_account_withholding_iva" />
        <field
            name="paperformat_id"
            ref="l10n_ve_config_withholding.account_withholding_paperformat"
        />
    </record>
</odoo>
