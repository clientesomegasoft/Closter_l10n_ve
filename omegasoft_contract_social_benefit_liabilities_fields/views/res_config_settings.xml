<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record
        id="l10n_ve_omegasoft_res_config_settings_view_form_social_benefit"
        model="ir.ui.view"
    >
        <field
            name="name"
        >l10n.ve.omegasoft.res.config.settings.view.form.social_benefit</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath
                expr="//div[@id='l10n_ve_configuration_social_benefits']"
                position="inside"
            >
                <div class="col-lg-6 col-12 o_setting_box">
                    <div class="o_setting_right_pane">
                        <div class="text-muted">
                            Configuration of the date to take in the calculation of social benefits
                        </div>
                        <span class="o_form_label">Benefit Calculation Date</span>
                        <div class="mt8">
                            <field name="selection_type_date_benefit" />
                        </div>

                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
