<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!-- hr.contract form view -->
    <record id="hr_contract_view_form_inherit_vacations_fields" model="ir.ui.view">
        <field name="name">hr.contract.view.form.inherit.vacations.fields</field>
        <field name="model">hr.contract</field>
        <field
            name="inherit_id"
            ref="omegasoft_contract_utility_liabilities_fields.hr_contract_view_form_inherit_labor_liabilities_page"
        />
        <field name="arch" type="xml">
            <xpath
                expr="//page[@name='labor_liabilities']/group[@name='top']/group[1]"
                position="after"
            >
                <group name="vacations" string="Vacations">
                    <label for="vacations_advances_granted" />
                    <div class="o_row" name="vacations_advances_granted">
                        <field
                            name="vacations_advances_granted"
                            readonly="1"
                            widget="monetary"
                            options="{'currency_field': 'vacations_advances_granted_currency'}"
                        />
                        <field
                            name="vacations_advances_granted_previous_amount"
                            invisible="1"
                            widget="monetary"
                            options="{'currency_field': 'vacations_advances_granted_currency'}"
                        />
                        <field
                            name="vacations_advances_granted_currency"
                            invisible="1"
                            options="{'no_open': True, 'no_create': True}"
                            attrs="{'required': [('vacations_advances_granted', '>', 0)]}"
                        />
                    </div>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
