<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record
        id="hr_view_employee_form_omegasoft_organizational_units"
        model="ir.ui.view"
    >
        <field name="name">hr.view.employee.form.omegasoft.organizational.units</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='department_id']" position="after">
                <field name="active_organizational_units" invisible="1" />
                <field
                    name="organizational_units_id"
                    attrs="{'invisible': [('active_organizational_units', '=', False)], 'required': [('active_organizational_units', '=', True)]}"
                />
            </xpath>
        </field>
    </record>

</odoo>
