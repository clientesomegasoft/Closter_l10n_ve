<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="organizational_units_res_config_settings_view_form_inherit_omegasoft" model="ir.ui.view">
        <field name="name">organizational.units.res.config.settings.view.form.inherit.omegasoft</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='custom_inherit_hr_payroll']" position="after">
				<h2>Configuration of the Organizational Units section</h2>
                <div class="row mt16 o_settings_container" id="l10n_ve_organizational_units">
					<div class="col-lg-6 col-12 o_setting_box">
						<div class="o_setting_right_pane">
							<div class="text-muted">				
								Activation of the fields for the creation of organizational units
							</div>
							<span class="o_form_label">Acive Organizational Units</span>
							<div class="mt8" id="active_organizational_units">
								<field name="active_organizational_units" />
							</div>
						</div>
					</div>
				</div>
            </xpath>
        </field>
    </record>
</odoo>
