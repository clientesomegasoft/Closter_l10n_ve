<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="sale_order_create_wizard_form_view" model="ir.ui.view">
        <field name="name">Sale Order Create Wizard</field>
        <field name="model">sale.order.create.wizard</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Lot/Serial Selection">
                <group>
                    <group>
                        <field
                            name="create_type"
                            required="1"
                            widget="radio"
                            options="{'horizontal': true}"
                        />
                    </group>
                    <group>
                    </group>
                </group>
                <notebook>
                    <page
                        string="Order Line"
                        attrs="{'invisible': [('create_type', '=', 'import_xls')]}"
                    >
                        <field name="consignment_line_ids">
                            <tree editable="bottom">
                                <field name="product_id" />
                                <field name="qty" />
                                <field name="price_unit" />
                                <field name="move_id" />
                                <field name="product_tracking" invisible="1" />
                                <button
                                    name="sale_line_lot_serial"
                                    type="object"
                                    class="btn"
                                    icon="fa-list"
                                    attrs="{'invisible':[('product_tracking', '=', 'none')]}"
                                    title="add qty or serial"
                                />
                            </tree>
                        </field>
                    </page>
                    <page
                        string="Import File"
                        attrs="{'invisible': [('create_type', '=', 'manually')]}"
                    >
                        <label for="file_name" />
                        <field name="data_file" nolabel="1" filename="file_name" />
                        <field name="file_name" invisible="1" />
                    </page>
                </notebook>
                <footer>
                    <button
                        class="oe_highlight"
                        name="action_create_sale_order"
                        string="Create Sale Order"
                        type="object"
                    />
                    <button special="cancel" string="Cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="order_line_wizard_from_view" model="ir.ui.view">
        <field name="name">Order Line Wizard</field>
        <field name="model">order.line.wizard</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Lot/Serial Selection">
                <group>
                    <group>
                        <field name="product_id" required="1" readonly="1" />
                        <field name="qty" required="1" readonly="1" />
                    </group>
                    <group>
                    </group>
                </group>
                <notebook>
                    <page string="Order Line">
                        <field name="order_line_ids">
                            <tree editable="bottom" create="false">
                                <field name="product_id" />
                                <field name="qty" />
                                <field
                                    name="lot_producing_id"
                                    options="{'no_create': True, 'no_create_edit':True}"
                                />
                            </tree>
                        </field>
                    </page>
                </notebook>
               <footer>
                    <button
                        class="oe_highlight"
                        name="confirm_lot_serial"
                        string="Confirm"
                        type="object"
                    />
                </footer>
            </form>
        </field>
    </record>

    <record id="action_sale_order_create_wizard" model="ir.actions.act_window">
        <field name="name">Create sale order</field>
        <field name="res_model">sale.order.create.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
