<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>

       <record id="view_sale_order_form_inherit_consignments" model="ir.ui.view">
            <field name="name">sale.order.view</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form" />
            <field name="arch" type="xml">
                <field name="date_order" position="after">
                    <field name="is_consignments_purchase" invisible="1" />
                    <field
                        name="is_consignments"
                        attrs="{'invisible': [('is_consignments_purchase', '=', False)]}"
                    />
                    <field
                        name="analytic_id"
                        attrs="{'invisible': [('is_consignments', '=', False)], 'required': [('is_consignments','=', True)]}"
                        domain="[('is_consignments', '=', True)]"
                    />
                </field>
                <xpath
                    expr="//page/field[@name='order_line']/tree/field[@name='product_template_id']"
                    position="after"
                >
                    <field
                        name="purchase_order_line_id"
                        force_save="1"
                        readonly="1"
                        attrs="{'column_invisible': [('parent.is_consignments', '=', False)]}"
                    />
                </xpath>
            </field>
        </record>

        <record id="action_consignments_orders" model="ir.actions.act_window">
            <field name="name">Consignments Sale Orders</field>
            <field name="res_model">sale.order</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('is_consignments', '=', True)]</field>
            <field
                name="context"
            >{'default_is_consignments': 1, 'default_is_consignments_purchase': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face"> Create Sale Orders </p>
            </field>
        </record>

        <menuitem
            id="menu_consignments_orders"
            name="Consignments Sale Orders"
            action="action_consignments_orders"
            parent="pways_so_po_consignment.menu_main_consignments"
            sequence="2"
        />

    </data>
</odoo>
