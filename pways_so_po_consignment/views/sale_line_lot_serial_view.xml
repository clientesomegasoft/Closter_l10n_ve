<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="sale_consignment_line_lot_serial_from_inherit" model="ir.ui.view">
        <field name="name">sale.consignment.line.lot.serial.from.view</field>
        <field name="model">sale.consignment.line.lot.serial</field>
        <field name="arch" type="xml">
            <form string="Sale Line Lot/Serial">
                <sheet>
                    <group>
                        <group>
                            <field name="product_id" readonly="1" />
                            <field name="demand" readonly="1" />
                        </group>
                        <group>
                        </group>
                    </group>
                    <footer>
                        <button
                            name="close_action_window"
                            type="object"
                            class="oe_highlight"
                            string="Save &amp; Close"
                        />
                        <button
                            string="Cancel"
                            class="btn-secondary"
                            special="cancel"
                            data-hotkey="z"
                        />
                    </footer>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
