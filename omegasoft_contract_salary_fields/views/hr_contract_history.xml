<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!-- hr.contract.history form view -->
    <record
        id="hr_contract_history_view_form_inherit_for_hr_employee_code"
        model="ir.ui.view"
    >
        <field
            name="name"
        >hr.contract.history.view.form.inherit.for.hr.employee.code</field>
        <field name="model">hr.contract.history</field>
        <field name="inherit_id" ref="hr_contract.hr_contract_history_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='employee_id']" position="before">
                <field name="employee_file" invisible="True" />
                <field
                    name="employee_file_code_id"
                    attrs="{'invisible': [('employee_file', '=', False)]}"
                    readonly="True"
                    options="{'no_open': 1}"
                /><span
                    attrs="{'invisible': [('employee_file_code_id', '=', False)]}"
                >-</span>
            </xpath>
        </field>
    </record>
</odoo>
