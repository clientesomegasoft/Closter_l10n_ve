<?xml version='1.0' encoding='utf-8' ?>
<odoo>
    <data>

        <!--smart button endowments delivered-->
        <record
            id="hr_contract_view_form_inherit_button_endowments_delivered"
            model="ir.ui.view"
        >
            <field
                name="name"
            >hr.contract.view.form.inherit.button.endowments.delivered</field>
            <field name="model">hr.contract</field>
            <field name="inherit_id" ref="hr_payroll.hr_contract_form_inherit" />
            <field name="arch" type="xml">
                <div name="button_box" class="oe_button_box">
                    <button
                        class="oe_stat_button"
                        type="object"
                        name="get_endowments_delivered"
                        icon="fa-paper-plane"
                        attrs="{'invisible': [('delivered_count', '=', 0)]}"
                    >
                        <field
                            string="Endowments delivered"
                            name="delivered_count"
                            widget="statinfo"
                        />
                    </button>
                </div>
            </field>
        </record>

        <record
            id="product_template_form_view_omegasoft_endowment_product"
            model="ir.ui.view"
        >
            <field
                name="name"
            >product.template.form.view.omegasoft.endowment.product</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='categ_id']" position="after">
                    <field name="is_an_endowment_product" />
                </xpath>
            </field>
        </record>
    </data>
</odoo>
