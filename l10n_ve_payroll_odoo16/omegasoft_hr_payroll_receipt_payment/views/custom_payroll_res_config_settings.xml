<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="l10n_ve_omegasoft_res_config_settings_view_form_signature" model="ir.ui.view">
        <field name="name">l10n.ve.omegasoft.res.config.settings.view.form.signature</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='l10n_ve_payment_receipt_configuration']/div/div/div[6]" position="after">
                <div class="text-muted">
                    Configuration of the stamp and signature for payment receipts.
                </div>
                <div class="mt8" id="signature_512">
                    <field name="signature_512" widget="image"/>
                </div>
            </xpath>
        </field>
    </record>
</odoo>