<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="view_partner_form" model="ir.ui.view">
		<field name="name">view.partner.form</field>
		<field name="model">res.partner</field>
		<field name="inherit_id" ref="l10n_ve_config_withholding.view_partner_form"/>
		<field name="arch" type="xml">
			<group name="withholding" position="inside">
				<group name="withholding_islr" string="Retenciones de ISLR">
					<field name="is_islr_agent" attrs="{'invisible': [('partner_type', 'not in', ('customer', 'customer_supplier'))]}"/>
					<field name="is_islr_exempt" attrs="{'invisible': [('partner_type', 'not in', ('supplier', 'customer_supplier'))]}"/>
					<field name="is_a_society" attrs="{'invisible': ['|', ('person_type_code', '!=', 'PJDO'), ('partner_type', 'not in', ('supplier', 'customer_supplier'))]}"/>
				</group>
			</group>
		</field>
	</record>
</odoo>