<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_account_payment_register_form" model="ir.ui.view">
        <field name="name">account.payment.register.form</field>
        <field name="model">account.payment.register</field>
        <field name="inherit_id" ref="account.view_account_payment_register_form" />
        <field name="arch" type="xml">
            <xpath expr="//group[@name='group1']" position="inside">
                <field name="apply_igtf" invisible="1" />
                <label
                    for="calculate_igtf"
                    attrs="{'invisible': [('apply_igtf', '=', False)]}"
                />
                <div class="d-flex" attrs="{'invisible': [('apply_igtf', '=', False)]}">
                    <field name="calculate_igtf" />
                    <span
                        attrs="{'invisible': [('calculate_igtf', '=', False)]}"
                    >(= <field
                            name="igtf_amount"
                            class="oe_inline"
                        /> importe IGTF)</span>
                </div>
                <field
                    name="igtf_journal_id"
                    attrs="{'invisible': ['|', ('apply_igtf', '!=', 'cash'), ('calculate_igtf', '=', False)], 'required': [('apply_igtf', '=', 'cash'), ('calculate_igtf', '=', True)]}"
                    options="{'no_create': 1, 'no_open': 1}"
                />
            </xpath>
        </field>
    </record>
</odoo>
