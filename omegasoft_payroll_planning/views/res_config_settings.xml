<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!-- res.config.settings form view -->
    <record
        id="planning_res_config_settings_view_form_inherit_omegasoft"
        model="ir.ui.view"
    >
        <field
            name="name"
        >planning.res.config.settings.view.form.inherit.omegasoft</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="planning.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@name='planning']/div[2]" position="after">
                <div class="col-12 col-lg-6 o_setting_box" name="planning_workstation">
                    <div class="o_setting_left_pane">
                        <field name="planning_workstation" />
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="planning_workstation" />
                        <div class="text-muted">
                        Do you want to associate jobs with roles?
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
